
@{
    ViewBag.Title = "Imgs Slider";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Slider</title>
    <link rel="stylesheet" href="~/assets/css/dropzone.css" />
    <link rel="stylesheet" href="~/vendors/nestable/nestable.css" type="text/css">
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header font-size-16">
                        Lista de Imagenes
                    </div>
                    <div class="container" id="content-table-images" style="padding-bottom: 10px; padding-top: 10px">
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="mImgSlider" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Carga de Imagenes </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="ti-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="@Url.Action("SaveUploadedFile","Products")" method="post"
                          class="dropzone"
                          id="dropzone-imagenes-slider">
                        <input id="idProducto" class="dropzone" name="idProducto" value="" hidden>
                    </form>
                    @*<div id="drop" class="dropzone"></div>*@
                    <p class="label-info-crea">Medidas de la imagenes 1117 × 485 px <br />Peso de las imagenes menor a 5MB</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>

