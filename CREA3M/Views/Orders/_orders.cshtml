@using CREA3M.Models


<table id="tblOrders" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id Orden</th>
            <th>Cliente</th>
            <th>Telefono Cliente</th>
            <th>Monto</th>
            <th>Fecha Orden</th>
            <th>Guia</th>
            <th>Status</th>
            <th>Editar Guia</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in (ViewBag.orders as List<Order>))
        {
            <tr>
                <td>@order.idOrdenCompra</td>
                <td>@order.cliente</td>
                <td>@order.telefono</td>
                <td>@order.monto</td>
                <td>@order.fechaRegistro</td>
                <td>@order.guia</td>
                <td>
                    <span class="badge badge-danger"></span>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mdEditStatus" data-idorden="@order.idOrdenCompra" data-idstatus="@order.idStatusOrdenCompra">
                        <span id="@order.idOrdenCompra">@order.statusOrdenCompra </span>
                    </button>
                </td>
                <td>
                    <span class="badge badge-danger"></span>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mdEditGuia" data-guia="@order.guia" data-orden="@order.idOrdenCompra">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    </button>
                </td>
            </tr>
        }

    </tbody>
</table>
