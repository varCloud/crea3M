@using CREA3M.Models

@{ //Si se modifica este titulo, se debe modificar el _Layout.cshtml
    ViewBag.Title = "Pedidos"; }

<!-- modal -->
<div class="modal fade" id="mdEditStatus" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <input id="idUsuario" name="prodId" type="hidden" value="">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar Status</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="ti-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Selecciona estatus</label>
                        <select class="form-control" id="status">
                            <option value="1">Pendiente</option>
                            <option value="2">Enviado</option>
                            <option value="3">Entregado</option>
                            <option value="4">Cancelado</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Cerrar
                </button>
                <button type="button" class="btn btn-primary" id="editStatus">Editar</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header font-size-16">
                    Lista de Pedidos
                </div>
                <div class="container" style="padding-bottom: 10px; padding-top: 10px">

                    <table id="myTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id Orden</th>
                                <th>Cliente</th>
                                <th>Telefono Cliente</th>
                                <th>Monto</th>
                                <th>Fecha Orden</th>
                                <th>Guia</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in (ViewBag.orders as List<Order>))
                            {
                                <tr>
                                    <td>@order.idOrdenCompra</td>
                                    <td>@order.cliente</td>
                                    <td>@order.telefono</td>
                                    <td>@order.monto</td>
                                    <td>@order.fechaRegistro</td>
                                    <td>@order.guia</td>
                                    <td>
                                        <span class="badge badge-danger"></span>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mdEditStatus" value="@order.idUsuarioEcommerce">
                                            @order.statusOrdenCompra
                                        </button>
                                    </td>
                                     <td>
                                        <span class="badge badge-danger"></span>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mdEditOrden" value="@order.idUsuarioEcommerce">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </button>
                                    </td>
                                </tr>
                             }

                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/assets/js/order.js")





