@{
    ViewBag.Title = "Ventas";
}
<link rel="stylesheet" href="~/vendors/datepicker/daterangepicker.css" type="text/css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.6.2/css/buttons.dataTables.min.css" type="text/css">

<div class="container">
    @ViewBag.date_init
    @ViewBag.date_end
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header font-size-16">
                    Lista de Ventas
                </div>
                <div class="card-body">
                    <div class="row m-b-10">
                        <div class="col-sm-12 col-md-6">
                            <label>Selecciona el rango  de fechas</label>
                            <input type="text" name="daterangepicker" class="form-control" id="date_picker">
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label>Selecciona una sucursal</label>
                            @if (ViewBag.admin)
                            {
                                @Html.DropDownList("selectedDB", (List<SelectListItem>)ViewBag.sucursales, null, new { @class = "form-control", @id = "selectedDB", required = "required"})
                            }
                            else
                            {
                                @Html.DropDownList("selectedDB", (List<SelectListItem>)ViewBag.sucursales, null, new { @class = "form-control", @id = "selectedDB", required = "required", disabled = true})
                            }
                        </div>
                    </div>
                    <div class="row m-b-10" id="filters">

                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 d-flex flex-column mt-auto">
                            <button class="btn btn-block btn-warning" id="clear">Este mes</button>
                        </div>
                        <div class="col-sm-12 col-md-6 d-flex flex-column mt-auto">
                            <button class="btn btn-block btn-primary" id="filter">Filtrar</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12" id="table_container">
                            <div class="d-flex align-items-center m-t-10">
                                <strong>Cargando...</strong>
                                <div class="spinner-border ml-auto black-color" role="status" aria-hidden="true"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/vendors/datepicker/daterangepicker.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.flash.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.print.min.js"></script>
@Scripts.Render("~/assets/js/ventasOverview.js")