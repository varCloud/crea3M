
@using CREA3M.Models

<table id="myTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>NP</th>
            <th>Producto</th>
            <th>Descripcion</th>
            <th>Categoria</th>
            <th>Unidad Venta</th>
            <th>Precio Venta</th>
            <th>Status</th>
            <th>Editar</th>
            <th>Imgen</th>
            <th>Galeria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in (ViewBag.productos as List<Product>))
        {
        <tr>
            <td>@producto.NP</td>
            <td>@producto.Producto</td>
            <td>@producto.Descripcion</td>
            <td>@producto.DescripcionCat</td>
            <td>@producto.UnidadDeVenta</td>
            <td>@producto.PrecioDeVenta</td>

            <td>
                <div class="form-group">
                    <div class="custom-control custom-switch custom-checkbox-dark">

                        <input type="checkbox" class="custom-control-input productActivo"
                               id="@producto.idProductoEcommerce"
                               @(producto.activo ? "checked" : "unchecked")
                               onclick="ActualizarEstatus(event,@producto.idProductoEcommerce)">
                        <label class="custom-control-label" for="@producto.idProductoEcommerce"></label>
                    </div>
                </div>
            </td>

            <td>
                <span class="badge badge-danger"></span>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mdEditProduct" value="@producto.idProductoEcommerce">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                </button>
            </td>
            <td>
                <span class="badge badge-danger"></span>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mCargarImg" value="@producto.idProductoEcommerce">
                    <i class="fa fa-upload" aria-hidden="true"></i>
                </button>
            </td>
            <td>
                <span class="badge badge-danger"></span>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mGaleria" value="@producto.idProductoEcommerce">
                    <i class="fa fa-file-image-o" aria-hidden="true"></i>
                </button>
            </td>
        </tr>
}

    </tbody>
</table>
